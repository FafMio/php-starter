{% extends "base.twig" %}

{% block title %}
    Connexion - {{ parent() }}
{% endblock %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-lg-4 mx-auto mt-5 text-center">
                <form method="post" class="needs-validation" novalidate>
                    <img class="mb-4" src="https://static.hephe.net/images/profile/sylweb_logo.svg" alt="" width="72" height="57">
                    <h1 class="h3 mb-3 fw-normal">Connectez-vous</h1>

                    {% if error is not empty %}
                        {% for err in error %}
                            <div class="alert alert-dismissible alert-danger">
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                {{ err|raw }}
                            </div>
                        {% endfor %}
                    {% endif %}

                    <div class="form-floating mb-3 has-validation">
                        <input type="email" class="form-control" id="email" name="email" placeholder="email@example.com">
                        <label for="email">Adresse email</label>
                        <div class="invalid-feedback">Veuillez rentrer un email valide.</div>
                    </div>
                    <div class="form-floating mb-3 has-validation">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                        <label for="password">Mot de passe</label>
                        <div class="invalid-feedback">Veuillez rentrer mot de passe.</div>
                    </div>

                    <button class="w-100 btn btn-lg btn-primary mb-3" type="submit">Se connecter</button>
                    <a href="{{ route(router, 'session-register') }}" class="btn btn-secondary btn-sm mb-3 w-100">Je n'ai pas de compte</a>
                    <a href="{{ route(router, 'session-resetpassword') }}" class="btn btn-danger btn-sm mb-3 w-100">J'ai oublié mon mot de passe</a>
                    <a href="{{ route(router, 'main-home') }}" class="btn btn-link mb-3">Retour à l'accueil</a>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
